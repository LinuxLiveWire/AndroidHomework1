<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_toast"
    tools:context="com.example.sergey.androidhomework1.ToastActivity">
    <Button
        android:text="Print Hello!!!"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/btnStartService"
        app:layout_constraintLeft_toLeftOf="@+id/activity_toast"
        app:layout_constraintTop_toTopOf="@+id/activity_toast"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_toast"
        app:layout_constraintBottom_toTopOf="@+id/btnStopService"
        android:layout_marginBottom="8dp"
        android:onClick="printHello" />
    <Button
        android:text="Print Goodbye!!!"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/btnStopService"
        app:layout_constraintLeft_toLeftOf="@+id/activity_toast"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_toast"
        app:layout_constraintRight_toRightOf="@+id/activity_toast"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_toast"
        android:onClick="printGoodbye" />
</android.support.constraint.ConstraintLayout>
